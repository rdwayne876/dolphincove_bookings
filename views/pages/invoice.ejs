<div class="relative mx-auto w-full max-w-4xl py-4 px-4 h-full md:h-auto">
    <div class="bg-white rounded-lg shadow relative p-8">
        <div class="flex items-center justify-between mb-8 px-3">
            <div>
                <span class="text-2xl">Invoice #</span> <%= data[0].invoice_no %> <br />
                <span>Date</span>: <%= new Date(data[0].book_date).toLocaleDateString() %> <br />
            </div>
            <div class="text-right">
                <img src="/imgs/logo.png" />
            </div>
        </div>

        <div class="flex justify-between mb-8 px-3">
            <div>
                Bill to<br>
                <%= data[0].name %> 
            </div>
            <div class="text-right">
                Dolphin Cove<br />
                Street 12<br />
                10000 City<br />
                billing@dolphincove.com
            </div>
        </div>

        <div class="border border-t-2 border-gray-200 mb-8 px-3"></div>

        <div class="flex flex-col">
            <div class="overflow-x-auto">
                <div class="align-middle inline-block min-w-full">
                    <div class="shadow overflow-hidden">
                        <table class="table-fixed min-w-full divide-y divide-gray-200">
                            <thead class="bg-gray-100">
                                <tr>
                                    <th scope="col" class="p-4 text-left text-xs font-medium text-gray-500 uppercase">
                                        Program Name
                                    </th>
                                    <th scope="col" class="p-4 text-left text-xs font-medium text-gray-500 uppercase">
                                        Program Date
                                    </th>
                                    <th scope="col" class="p-4 text-left text-xs font-medium text-gray-500 uppercase">
                                        No. of Guests
                                    </th>
                                    <th scope="col" class="p-4 text-left text-xs font-medium text-gray-500 uppercase">
                                        Cost
                                    </th>
                                </tr>
                            </thead>
                            <tbody class="bg-white divide-y divide-gray-200">
                                    <tr class="hover:bg-gray-100">
                                        <td class="p-4 whitespace-nowrap text-base font-medium text-gray-900"><%= data[0].program_name %> </td>
                                        <td class="p-4 whitespace-nowrap text-base font-medium text-gray-900"><%= new Date(data[0].program_date).toLocaleDateString() %> </td>
                                        <td class="p-4 whitespace-nowrap text-base font-medium text-gray-900"><%= data[0].guests %> </td>
                                        <td class="p-4 whitespace-nowrap text-base font-medium text-gray-900">$<%= data[0].cost %> </td>
                                    </tr>                           
                            </tbody>             
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <div class="mb-8 px-3 py-8 text-right">
            <span>Invoice Total $</span><b class="underline font-bold"><%= data[0].cost %> </b>

        </div>



        <div class="text-center text-sm px-3">
            billing@dolphincove.com âˆ– www.dolphincove.com
        </div>
    </div>
</div>